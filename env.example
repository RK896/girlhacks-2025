# MongoDB Configuration
# Get this from MongoDB Atlas or your MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/athenas-journal?retryWrites=true&w=majority

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Azure AI Configuration
# Get these from Azure Portal > Your Cognitive Services Resource > Keys and Endpoint
NEXT_PUBLIC_AZURE_AI_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com
NEXT_PUBLIC_AZURE_AI_KEY=your_32_character_azure_key_here

# Azure Speech Services Configuration
# Get these from Azure Portal > Your Speech Services Resource > Keys and Endpoint
AZURE_SPEECH_ENDPOINT=https://your-speech-resource-name.cognitiveservices.azure.com
AZURE_SPEECH_KEY=your_32_character_speech_key_here

# Gemini API Configuration
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key

# OpenAI API Configuration (for Whisper speech-to-text)
OPENAI_API_KEY=your_openai_api_key_here
